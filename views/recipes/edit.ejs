<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>

        <h1 style="text-align: center; margin-top: 15px; margin-bottom: 30px">Edit Recipe Page</h1>
            
            <div class="card mx-auto" style="width: 40rem">
                    <div class="card-body">
                    <form action="/recipes/<%=recipe.id%>?_method=PUT" method="POST">
                        <div class="form-group">
                            <label class="text-dark" for="recipe title">Post Title</label>
                            <input type="text" class="form-control" value="<%=recipe.title%>" name="title">
                        </div>
                        <div class="form-group text-dark">
                            <label for="imageURL1">Image URL</label>
                            <input type="text" class="form-control" name="img1" value="<%=recipe.img1%>">
                        </div>
                        <div class="form-group">
                            <label for="imageURL2">Image URL</label>
                            <input type="text" class="form-control" name="img2" value="<%=recipe.img2%>">
                        </div>
                        <div class="form-group">
                            <label for="imageURL3">Image URL</label>
                            <input type="text" class="form-control" name="img3" value="<%=recipe.img3%>">
                        </div>
                        <div class="form-group">
                            <label for="linkURL1">Link URL</label>
                            <input type="text" class="form-control" name="link1" value="<%=recipe.link1%>">
                        </div>
                        <div class="form-group">
                            <label for="linkURL2">Link URL</label>
                            <input type="text" class="form-control" name="link2" value="<%=recipe.link2%>">
                        </div>
                        <div class="form-group">
                            <label for="recipe post">Recipe/Post Entry</label>
                            <textarea type="text" class="form-control" name="recipeEntry" value="<%=recipe.recipeEntry%>" rows="4"><%=recipe.recipeEntry%></textarea>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="healthGoals"
                            <% if(recipe.healthGoals === true){ %>
                                checked
                            <% } %> 
                            />
                            <label class="healthGoalsLabel" for="formCheckHealthGoals">
                            This recipe/meal was in line with my health goals</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="submitPublicFeed" 
                            <% if(recipe.submitPublicFeed === true){ %>
                                checked
                            <% } %>
                            />
                            <label class="publicFeedLabel" for="formCheckPublicFeed">
                            I'd like to submit this post to the public feed.
                            </label>
                        </div>
                        <input type="submit" class="btn btn-primary" name="" value="Submit Changes"/>
                    </form>
                
                </div>
            </div>
        

<%- include('../partials/footer.ejs') %>


                        