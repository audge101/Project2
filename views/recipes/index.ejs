<%- include('../partials/nav.ejs') %>

		<h1>Recipes Index Page</h1>
		 <nav>
		    <a href="/recipes/new">Create a New Recipe</a>
		</nav>


            <% for(let i = 0; i < recipes.length; i++){ %>
					<div class="card" style="width: 20rem;">
						<img src="<%=recipes[i].img1; %>" class="card-img-top" alt="...">
						<div class="card-body">
					    <a href="/recipes/<%=recipes[i].id; %>"><h5 class="card-title" text-align="center">
					        <%=recipes[i].title; %>
					        </h5>
					    </a>
					    <p class="card-text">
						    <form action="/recipes/<%=recipes[i].id; %>?_method=DELETE" method="POST">
						        <input type="submit" value="DELETE"/>
						    </form>
						    <a href="/recipes/<%=recipes[i].id; %>/edit">Edit</a>
					    </p>
					  	</div>
					</div>

            <% } %>
   
       

